<h1>Notes for Cats</h1>

<p>Finally, a note-storage application just for cats. Who can type.</p>

<%= erb :form %>

<div class="notes">
  <h2>Your Notes</h2>
    <% @notes.reverse.each do |note| %>
      <div id="note_title">
        <%= note.title %> 
      </div>
      <div id="note_content"><%= note.content %>
        <div class="button">
        <button><a href="/notes/<%= note.id %>">Update Note</a></button>
        <button id="delete"><a href="/notes/<%= note.id %>">Delete Note</a></button>
<!--         <form action="/notes/<%= note.id %>" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <input type="submit" value="Delete Note" class="confirm">
        </form> -->
        </div>
      </div>
    <% end %>
</div>